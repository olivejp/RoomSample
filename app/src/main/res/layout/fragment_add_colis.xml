<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="colis"
            type="firebaseauthcom.example.orlanth23.roomsample.database.entity.ColisEntity" />

        <variable
            name="callback"
            type="firebaseauthcom.example.orlanth23.roomsample.fragment.callback.AddColisCallbackListener" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        tools:mContext="nc.opt.mobile.optmobile.fragment.AddColisFragment">

        <TextView
            android:id="@+id/text_suivi_colis_explicatif"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Veuillez saisir les 13 lettres/chiffres de votre colis"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="46dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_id_parcel"
            app:layout_constraintTop_toBottomOf="@+id/text_suivi_colis_explicatif"
            app:srcCompat="@drawable/ic_search_grey_900_48dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="46dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_description_parcel"
            app:layout_constraintTop_toBottomOf="@+id/edit_id_parcel"
            app:srcCompat="@drawable/ic_note_add_grey_900_48dp" />

        <EditText
            android:id="@+id/edit_id_parcel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="46dp"
            android:gravity="center"
            android:hint="NumÃ©ro de suivi"
            android:inputType="textCapCharacters"
            android:maxLength="13"
            android:text="@{colis.idColis}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_suivi_colis_explicatif"
            tools:text="EZ036524985US" />

        <EditText
            android:id="@+id/edit_description_parcel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="46dp"
            android:gravity="center"
            android:hint="Description"
            android:text="@{colis.description}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_id_parcel"
            tools:text="Cadeau de maman" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> callback.onClick(colis)}"
            android:windowSoftInputMode="adjustResize"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_search_white_48dp" />
    </android.support.constraint.ConstraintLayout>

</layout>